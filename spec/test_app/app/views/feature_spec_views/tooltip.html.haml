/ = ui.bootstrap :alert, :info, heading: 'Tooltipable components' do
/   = ui.bootstrap :typeface, body: 'Help ensure that each component on this list is represented on this feature spec:'
/   = components_that_have_defined_method(component_suite: :nfg, tested_method: :tooltip)

/ = ui.bootstrap :typeface, heading: 'Tooltip Interactions', class: 'mb-3'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Typeface Tooltips', class: 'mb-1'

/ %p= ui.bootstrap :typeface, title: 'Typeface title with tooltip', tooltip: feature_spec_tooltip_text, describe: 'tooltip-typeface-title'
/ %p= ui.bootstrap :typeface, heading: 'Typeface heading with tooltip', tooltip: feature_spec_tooltip_text, describe: 'tooltip-typeface-heading'
/ %p= ui.bootstrap :typeface, subheading: 'Typeface subheading with tooltip', tooltip: feature_spec_tooltip_text, describe: 'tooltip-typeface-subheading'
/ %p= ui.bootstrap :typeface, caption: 'Typeface caption with tooltip', tooltip: feature_spec_tooltip_text, describe: 'tooltip-typeface-caption'
/ %p= ui.bootstrap :typeface, body: 'Typeface body with tooltip', tooltip: feature_spec_tooltip_text, describe: 'tooltip-typeface-body'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Badge Tooltips', class: 'mb-1'
/ %p
/   = ui.bootstrap :badge, body: 'Tooltip Badge', tooltip: feature_spec_tooltip_text, describe: 'tooltip-badge'
/   = ui.bootstrap :badge, tooltip: feature_spec_tooltip_text, describe: 'tooltip-badge-with-link', href: '#nogo', body: 'Tooltip Badge Linked'
/   = ui.bootstrap :badge, tooltip: feature_spec_tooltip_text, describe: 'tooltip-badge-pill', body: 'Tooltip Pill Badge'
/   = ui.bootstrap :badge, tooltip: feature_spec_tooltip_text, describe: 'tooltip-badge-pill-with-link', href: '#nogo', body: 'Tooltip Pill Badge Linked'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Icon Tooltips', class: 'mb-1'
/ %p= ui.bootstrap :icon, 'rocket', tooltip: feature_spec_tooltip_text, describe: 'tooltip-icon'
/ %p= ui.bootstrap :icon, 'rocket', text: 'Tooltip with text', tooltip: feature_spec_tooltip_text, describe: 'tooltip-icon-with-text'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Buttons', class: 'mb-1'

/ -# Enabled buttons
/ %p= ui.bootstrap :button, as: :button, tooltip: feature_spec_tooltip_text, body: '<button> with Tooltip', describe: 'tooltip-button'

/ %p= ui.bootstrap :button, tooltip: feature_spec_tooltip_text, body: '<a> with Tooltip', describe: 'tooltip-button-link', href: '#'

/ -# Enabled buttons with nil modal
/ -# Modal and tooltip are not allowed to both be present
/ -# at the same time. This helps ensure that the :modal key
/ -# is still acceptable, even if nil (as it should be).
/ %p= ui.bootstrap :button, tooltip: feature_spec_tooltip_text, body: 'Button with Nil Modal', describe: 'tooltip-button-with-nil-modal', href: '#', modal: ('#test_modal' if 1!=1)

/ -# Disabled buttons
/ %span{ data: { describe: 'disabled-button-wrapper' } }
/   %p= ui.bootstrap :button, :disabled, tooltip: feature_spec_tooltip_text, body: 'Disabled button with tooltip', describe: 'disabled-button-link-with-tooltip'


/ %hr

/ = ui.bootstrap :typeface, subheading: 'Dropdown Items', class: 'mb-1'

/ = ui.bootstrap :dropdown do
/   = ui.bootstrap :dropdown_toggle, body: 'Tooltipped Dropdown Items', describe: 'dropdown-menu'

/   = ui.bootstrap :dropdown_menu do
/     -# Dropdown item with tooltip
/     = ui.bootstrap :dropdown_item, body: 'Dropdown item with tooltip', icon: 'rocket', tooltip: feature_spec_tooltip_text, href: '#', describe: 'tooltip-dropdown-item'

/     -# Dropdown item with tooltip and with nil modal
/     -# Modal and tooltip are not allowed to both be present
/     -# at the same time. This helps ensure that the :modal key
/     -# is still acceptable, even if nil (as it should be).
/     = ui.bootstrap :dropdown_item, body: 'Dropdown item with tooltip', icon: 'rocket', tooltip: feature_spec_tooltip_text, href: '#', modal: ('#test_modal' if 1!=1), describe: 'tooltip-dropdown-item-with-nil-modal'

/     -# Disabled dropdown item with tooltip
/     %span{ data: { describe: 'disabled-dropdown-item-wrapper' } }
/       = ui.bootstrap :dropdown_item, :disabled, body: 'Dropdown item with tooltip', icon: 'rocket', tooltip: feature_spec_tooltip_text, describe: 'disabled-tooltip-dropdown-item'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Nav Items', class: 'mb-1'

/ = ui.bootstrap :nav, class: 'bg-light p-3' do
/   = ui.bootstrap :nav_item, body: 'Nav Item with Tooltip', href: '#', tooltip: feature_spec_tooltip_text, describe: 'tooltip-nav-item'

/   %span{ data: { describe: 'disabled-nav-item-wrapper' } }
/     = ui.bootstrap :nav_item, :disabled, body: 'Disabled Nav Item with Tooltip', href: '#', tooltip: feature_spec_tooltip_text, describe: 'disabled-tooltip-nav-item'

/   -# Active nav item with tooltip
/   = ui.bootstrap :nav_item, :active, body: 'Active Nav Item with Tooltip', href: '#', tooltip: feature_spec_tooltip_text, describe: 'tooltip-active-nav-item'

/   -# Dropdown item with tooltip and with nil modal
/   -# Modal and tooltip are not allowed to both be present
/   -# at the same time. This helps ensure that the :modal key
/   -# is still acceptable, even if nil (as it should be).
/   = ui.bootstrap :nav_item, body: 'Active Nav Item with Tooltip', href: '#', tooltip: feature_spec_tooltip_text, modal: ('#test_modal' if 1!=1), describe: 'tooltip-nav-item-with-nil-modal'

/ %hr

/ = ui.bootstrap :typeface, subheading: 'Slat Actions', class: 'mb-1'

/ -# Slat action inherits from dropdown item. Not assuming they are 1:1, however.
/ = ui.bootstrap :slat_actions, describe: 'slat-actions-menu' do

/   -# Slat action without href
/   = ui.bootstrap :slat_action, body: 'Tooltip Slat Action - No Href', icon: 'rocket', tooltip: feature_spec_tooltip_text, describe: 'tooltip-slat-action'

/   -# Slat action with href
/   = ui.bootstrap :slat_action, body: 'Tooltip Slat Action - With Href', icon: 'rocket', tooltip: feature_spec_tooltip_text, href: '#', describe: 'tooltip-slat-action-with-href'

/   -# Slat action with tooltip and with nil modal
/   -# Modal and tooltip are not allowed to both be present
/   -# at the same time. This helps ensure that the :modal key
/   -# is still acceptable, even if nil (as it should be).
/   = ui.bootstrap :slat_action, body: 'Tooltip Slat Action - With Nil Tooltip', icon: 'rocket', tooltip: feature_spec_tooltip_text, describe: 'modal-slat-action-with-tooltip', modal: ('#test_modal' if 1!=1)

/   -# Disabled slat action with tooltip
/   %span{ data: { describe: 'disabled-slat-action-wrapper' } }
/     = ui.bootstrap :slat_action, :disabled, body: 'Disabled Tooltip Slat Action - No Href', icon: 'rocket', tooltip: feature_spec_tooltip_text, describe: 'disabled-slat-action'
/ %hr

/ = ui.bootstrap :typeface, subheading: 'Steps', class: 'mb-1'

/ = ui.bootstrap :steps do
/   = ui.bootstrap :step, :visited, step: 1, body: 'Donation', href: '#back', tooltip: feature_spec_tooltip_text, describe: 'tooltip-step-visited'
/   = ui.bootstrap :step, :active, step: 2, body: 'Your Info', tooltip: feature_spec_tooltip_text, describe: 'tooltip-step-active'
/   = ui.bootstrap :step, step: 3, body: 'Payment', tooltip: feature_spec_tooltip_text, describe: 'tooltip-step-disabled'

/ %hr

