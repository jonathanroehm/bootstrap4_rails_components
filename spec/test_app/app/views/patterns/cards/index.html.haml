%h1 Cards

= ui.bootstrap :card, heading: 'stuff', title: 'title!', describe: 'donor-scroll' do
  Howdy

= ui.bootstrap :card, heading: 'Card heading', subtitle: 'Card subtitle', body: 'Card body', class: 'my-4'

= ui.bootstrap :card, heading: 'Card heading', class: 'my-4' do
  %p.card-text Card body from a block

= ui.bootstrap :card, class: 'my-4' do
  Default, no frills card

= ui.bootstrap :card, render_in_body: false, class: 'my-4' do
  = ui.bootstrap :card_image_overlay, image: 'https://via.placeholder.com/600x400', title: 'Card Image Overlay Title' do
    %p.card-text Some additional information
  = ui.bootstrap :card_body do
    %p.card-text Some body content


= ui.bootstrap :card, render_in_body: false, class: 'my-4' do
  = ui.bootstrap :card_image, image: 'https://via.placeholder.com/600x400', title: 'Card Image Overlay Title'
  = ui.bootstrap :card_body do
    %p.card-text card image version without overlay

%hr

%h2 Card with render in body false
= ui.bootstrap :card, title: 'Tile without body', render_in_body: false do
  = ui.bootstrap :card_body, body: 'Manual card body'
  = ui.bootstrap :card_body do
    %p Some content for the second card body
  = ui.bootstrap :card_footer, body: 'the card footer'

%hr

%h2 Themes

%h3 Solid Card Themes

= ui.bootstrap :card, :primary, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', footer: 'Card Footer' do
  %p.card-text Card with primary theme

= ui.bootstrap :card, :secondary, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with secondary theme'

= ui.bootstrap :card, :success, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with success theme'

= ui.bootstrap :card, :danger, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with danger theme'

= ui.bootstrap :card, :warning, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with warning theme'

= ui.bootstrap :card, :info, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with info theme'

= ui.bootstrap :card, :light, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with light theme'

= ui.bootstrap :card, :dark, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with dark theme'

%hr

%h3 Outlined Card Themes
= ui.bootstrap :card, :primary, :outlined, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', footer: 'Card Footer' do
  %p.card-text Card with primary theme

= ui.bootstrap :card, :outlined, :secondary, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with secondary theme'

= ui.bootstrap :card, :success, :outlined, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with success theme'

= ui.bootstrap :card, :outlined, :danger, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with danger theme'

= ui.bootstrap :card, :outlined, :warning, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with warning theme'

= ui.bootstrap :card, :outlined, :info, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: 'Card with info theme'

= ui.bootstrap :card, :outlined, :light, heading: 'Card Headline', subtitle: 'Card Subtitle', class: 'my-4', body: "Card with light theme. Since this is an outline card, the light theme won't have any affect, otherwise it would be white text on a white background."

